<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/imageView"
            motion:dragDirection="dragDown" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:id="@+id/textView"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView5"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imgTien"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/imgPlay"
            android:layout_width="50dp"
            android:layout_height="71dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="@+id/imgPlay"
            motion:layout_constraintHorizontal_bias="0.047"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            motion:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:id="@+id/imgTien"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/imgPlay"
            android:layout_width="50dp"
            android:layout_height="71dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="32dp"
            motion:layout_constraintTop_toTopOf="@+id/imgPlay"
            motion:layout_constraintHorizontal_bias="0.047"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            motion:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:id="@+id/imgLui"
            android:layout_width="50dp"
            android:layout_height="70dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/imgLui"
            android:layout_width="50dp"
            android:layout_height="70dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/imgPlay"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/imgLui"
            android:layout_width="70dp"
            android:layout_height="97dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            motion:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginStart="28dp"
            motion:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="28dp"
            motion:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:id="@+id/imgPlay"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/imgLui"
            android:layout_width="70dp"
            android:layout_height="97dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            motion:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginStart="28dp"
            motion:layout_constraintHorizontal_bias="0.0"
            android:layout_marginLeft="28dp"
            motion:layout_constraintVertical_bias="1.0" />
        <Constraint
            android:id="@+id/seekBar"
            android:layout_width="250dp"
            android:layout_height="26dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.894"
            motion:layout_constraintTop_toBottomOf="@+id/textView" />
        <Constraint
            android:id="@+id/seekBar"
            android:layout_width="250dp"
            android:layout_height="26dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.894"
            motion:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="30dp" />
        <Constraint
            android:layout_height="100dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="100dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/imageView"
            motion:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="20dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:id="@+id/txtNameSong"
            motion:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="28dp" />
        <Constraint
            android:layout_height="322dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="281dp"
            android:id="@+id/textView"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/txtNameSinger"
            android:layout_marginTop="20dp" />
    </ConstraintSet>
</MotionScene>